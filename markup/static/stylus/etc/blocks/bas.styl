.bas
  display flex
  align-items center
  a
    font('HelveticaNeueCyr', 17px, 20px, 400, #ffffff)
        
    position relative
    display inline-block
    margin-left 5px
    padding-bottom 3px

    text-decoration none

    transition 0.3s ease
    &::after
      content ''

      position absolute
      left 0
      bottom 0

      width 100%
      height 1px

      background-color #ffffff

      transition 0.3s ease
    &:hover
      &::after
        width 0

        opacity 0
  div
    position relative
    
    margin-right 30px
    p
      reset()
      font('HelveticaNeueCyr', 17px, 27px, 400, #ffffff)
      
      position absolute
      top -6px
      right -19px
      
      width 25px
      height 25px
      
      text-align center
      
      background-color #fc471e
      
      border-radius 50%
    span
      display block
      width 32px
      height 32px
      .icon
        width 32px
        height 32px
        
        fill #ffffff